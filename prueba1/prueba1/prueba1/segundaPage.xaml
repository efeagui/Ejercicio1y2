<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="prueba1.segundaPage"
             NavigationPage.HasNavigationBar="False"
             >
    <ContentPage.Content>
        <StackLayout BackgroundColor="Black">

            <Label Text="FORMULARIO" HorizontalOptions="Center" FontSize="Small" TextColor="Blue" Padding="0,30,0,0"></Label>

            <Label Text="Nombre" FontSize="Small" TextColor="White" Padding="10,0,0,0"></Label>
            <Entry x:Name="txtnombre" ></Entry>

            <Label Text="Apellido" FontSize="Small" TextColor="White" Padding="10,0,0,0"></Label>
            <Entry x:Name="txtapellido" ></Entry>

            <Label Text="Edad" FontSize="Small" TextColor="White" Padding="10,0,0,0"></Label>
            <Entry x:Name="txtedad" Keyboard="Numeric"></Entry>

            <Label Text="Correo" FontSize="Small" TextColor="White" Padding="10,0,0,0"></Label>
            <Entry x:Name="txtcorreo" Keyboard="Email" ></Entry>

            <Button x:Name="btnenviar" Text="Enviar Datos" Clicked="btnenviar_Clicked" BackgroundColor="Green" FontAttributes="Bold"  ></Button>
            <Button x:Name="btnregre" Text="Regresar al menu" Clicked="btnregre_Clicked" BackgroundColor="Red" FontAttributes="Bold"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>